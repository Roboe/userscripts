{
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "save-as-pdf@virgulilla.com"
    }
  },

  "name": "Save as PDF from Firefox Reader View",
  "version": "1.0",

  "author": "Roberto M. F.",
  "homepage_url": "https://gitlab.com/Roboe/userscripts",
  "description": "Add a browser action that lets you save articles as an on-the-fly generated PDF for offline consumption",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2x.png"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["save-as-pdf.js"]
  },

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "19": "icons/button.svg",
      "38": "icons/button.svg"
    },
    "default_title": "Save as PDF"
  }
}
